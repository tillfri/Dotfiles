{
    "layer": "top",
    "output":["DP-1"],
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 34,
    "margin-right": 10,
    "margin-left": 10,
    "margin-top": 2,
    "margin-bottom": 0,
    "modules-left": [
	"cpu",
	"temperature",
	"memory",
    ],
    "modules-center": [
	"hyprland/workspaces",
    ],
    "modules-right": [
	"custom/updates",
	"network",
	"tray",
        "pulseaudio",
        "pulseaudio#microphone",
        "battery",
        "clock",
    ],
    
    "clock": {
        "format": "ÔÄó {:%H:%M}",
        "timezone": "Europe/Berlin"
    },

    "network": {
        "tooltip": true,
        "format-wifi": "<span foreground='#FFFFFF'>ÔÄô {bandwidthDownBytes}</span> <span foreground='#FFFFFF'>ÔÇì {bandwidthUpBytes}</span>",
        "format-ethernet": "<span foreground='#FFFFFF'>ÔÄô {bandwidthDownBytes}</span> <span foreground='#FFFFFF'>ÔÇì {bandwidthUpBytes}</span>",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": " Û∞ñ™ ",
        "tooltip-format-disconnected": "Disconnected",
        "interval": 5,
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        }
    },

    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "^n( .*)?$": "ÓüÖ $1",
            "^y( .*)?$": "ÔÅº $1",
            "^lg( .*)?$": "Û∞ä¢ lazygit $1",
            "^Yazi:( .*)?$": "ÔÅº $1",
            "^yazi( .*)?$": "ÔÅº $1",
            "^(.*) ‚Äî Mozilla Firefox$": "Ôâ©  $1",
            "^(.*) - Mozilla Firefox$": "Ôâ©  $1",
            "^(.*) - Obsidian v[0-9.]+$": "üóí $1",
            "^(.*) - Discord$": "Ôáø  $1",
        },
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Û∞õê",
            "deactivated": "Û∞õë"
        },
        "tooltip": true
    },

    "custom/power_btn": {
        "format": "ÔåÉ",
        "on-click": "sh -c '(sleep 0.5s; wlogout --protocol layer-shell)' & disown",
        "tooltip": false
    },

    "cpu": {
        "interval": 5,
        "format": "Ôãõ {usage}%",
        "max-length": 10,
        "format-alt-click": "click-right",
        "format-alt": "Ôãõ {usage}%",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },

    "memory": {
	"interval": 5,
        "format": "ÔÉâ {used}GiB"
    },

    "disk": {
        "interval": 30,
        "format": "Û∞ãä {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },

    "temperature": {
	"hwmon-path-abs": "/sys/devices/pci0000:00/0000:00:18.3/hwmon",
	"input-filename": "temp1_input",
        "format": "Ôãâ {temperatureC}¬∞C",
	"interval": 5,
    },

    "battery": {
        "states": {
            "good": 80,
            "warning": 30,
            "critical": 20
        },
	"interval": 10,
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {capacity}%",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "Ôë¶",
        "on-click": "~/.config/waybar/scripts/volume --toggle",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.config/waybar/scripts/volume --inc",
        "on-scroll-down": "~/.config/waybar/scripts/volume --dec",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "tooltip": true,
        "tooltip-format": "{icon} at {volume}%"
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "~/.config/waybar/scripts/volume --toggle-mic",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.config/waybar/scripts/volume --mic-inc",
        "on-scroll-down": "~/.config/waybar/scripts/volume --mic-dec",
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "ÔÑ∞ at {volume}%"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-scroll-up": "~/.config/waybar/scripts/brightness --inc",
        "on-scroll-down": "~/.config/waybar/scripts/brightness --dec"
    },

    "tray": {
        "icon-size": 16,
        "spacing": 10
    },

    "custom/updates": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/update-sys",
        "on-click": "~/.config/waybar/scripts/update-sys update",
        "interval": 900,
        "tooltip": true
    }
}
